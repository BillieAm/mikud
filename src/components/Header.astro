---
import { Image } from "astro:assets";
// component imports
import Link from "./Link.astro";
import { Hamburger } from "./Hamburger.jsx";
import { MobileMenu } from "./MobileMenu";

// images imports
import logo from "../assets/logo.png";

// data imports
import { navLinks } from "../data";
---

<header class="fixed top-0 z-10 w-full bg-background">
  <div
    class="max-w-screen-2xl mx-auto px-fluid-m py-fluid-s flex items-center justify-between border-b-2 border-tertiary-light"
  >
    <!-- mobile menu islands  -->
    <Hamburger client:idle />
    <MobileMenu client:idle>
      <ul class="flex flex-col gap-7">
        {
          navLinks.map(item => (
            <li>
              <Link href={item.path} text={item.name} type="link" />
            </li>
          ))
        }
        <Link href="#צור-קשר" text="צרו קשר" type="link" />
      </ul>
    </MobileMenu>

    <!-- larger devices menu -->
    <nav class="hidden lg:flex justify-self-start">
      <ul class="flex gap-11">
        {
          navLinks.map(item => (
            <li>
              <Link href={item.path} text={item.name} type="link" />
            </li>
          ))
        }
      </ul>
    </nav>
    <Link
      href="#צור-קשר"
      text="דברו אתנו"
      type="btn"
      classes="hidden text-white bg-black md:flex hover:opacity-80"
    />
  </div>

  <!-- Logo -->
  <div
    class="w-24 h-24 md:w-fluid-3xl md:h-fluid-3xl flex justify-center absolute left-1/2 -translate-x-1/2"
  >
    <a
      href="/"
      class="p-fluid-xs bg-background flex border-2 border-tertiary-light rounded-full aspect-square absolute -top-1/2"
    >
      <Image src={logo} alt="מיקוד" class="object-cover aspect-square" /></a
    >
  </div>
</header>
