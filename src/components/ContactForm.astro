---
import { Icon } from "astro-icon";
---

<div class="grow-[2]">
  <form class="grid gap-fluid-s md:grid-cols-2 auto-rows-fr">
    <p class="hidden">
      <label>
        Don’t fill this out if you’re human: <input name="bot-field" />
      </label>
    </p>
    <input type="hidden" name="form-name" value="contact" />

    <div>
      <input
        id="name"
        type="text"
        name="name"
        placeholder="שם"
        class="w-full p-fluid-xs bg-input border-none rounded-full focus:ring-accent focus:ring-2 focus:bg-background"
      />
    </div>

    <div>
      <input
        id="email"
        type="email"
        name="email"
        placeholder="אימייל"
        required
        class="w-full p-fluid-xs bg-input border-none rounded-full focus:ring-accent focus:ring-2 focus:bg-background"
      />
    </div>

    <div class="col-span-full row-span-2">
      <textarea
        id="message"
        wrap="soft"
        name="message"
        placeholder="הודעה"
        required
        class="w-full h-full p-fluid-xs bg-input border-none rounded-lg focus:ring-accent focus:ring-2 focus:bg-background"
      ></textarea>
    </div>

    <button
      type="submit"
      class="bg-accent text-white px-fluid-m py-fluid-2xs font-semibold w-max border-2 rounded-full transition flex items-center gap-3 self-end hover:bg-white hover:text-accent border-accent"
    >
      <span>שלחו</span>
      <Icon name="tabler:send" class="w-6" />
    </button>
  </form>
</div>
