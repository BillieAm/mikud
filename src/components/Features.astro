---
// library imports
import { Icon } from "astro-icon";
// data imports
import { features } from "../data";
---

<section class="grid grid-cols-2 p-4 gap-5 sm:grid-cols-3 md:grid-cols-6">
  {
    features.map(feature => (
      <div class="flex flex-col items-center text-center">
        <div class={`${feature.color} w-10 p-2  rounded-full`}>
          <Icon name={feature.icon} />
        </div>
        <div>
          <p>
            <span class="block">{feature.line1}</span> {feature.line2}
          </p>
        </div>
      </div>
    ))
  }
</section>
