---
import Link from "./Link.astro";

interface Props {
  text?: string;
  btnText?: string;
  href?: string;
}

const {
  text = "רוצים לשמוע עוד?",
  btnText = "דברו איתנו",
  href = "/צור-קשר/"
} = Astro.props;
---

<div
  class="flex flex-col justify-center items-center gap-4 m-20 text-center sm:flex-row"
>
  <p class="lg:text-2xl">{text}</p>
  <Link
    href={href}
    text={btnText}
    classes={"inline-block text-black font-bold px-5 py-1 bg-purple-300 border-2 border-text-color rounded-full md:text-xl"}
  />
</div>
