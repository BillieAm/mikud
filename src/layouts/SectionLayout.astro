---
interface Props {
  heading: string;
  subheading?: string;
  id: string;
  bgColor?: "bg-primary" | "bg-accent-light";
  textColor?: "text-primary" | "text-white";
}
const {
  heading,
  subheading,
  id,
  bgColor,
  textColor = "text-primary"
} = Astro.props;
---

<section id={id} class:list={[bgColor]}>
  <div class="max-w-7xl mx-auto px-fluid-m py-fluid-2xl">
    <div class="flex flex-col items-center">
      <h2 class=`${textColor} text-primary text-fluid-3 font-bold`>
        {heading}
      </h2>
      <span aria-hidden="true" class="h-1 w-10 bg-tertiary rounded-full"></span>
      <p class="text-fluid-0 mt-3 mb-fluid-l">{subheading}</p>
    </div>
    <slot />
  </div>
</section>
