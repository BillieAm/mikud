---
import SubCTA from "../components/SubCTA.astro";

interface Props {
  heading: string;
}
const { heading } = Astro.props;
---

<div class="max-w-7xl mx-auto px-6 pt-28 pb-10 sm:px-12 md:px-24 md:pt-48">
  <h1
    class="flex flex-col items-center mt-4 mb-12 text-text-color text-4xl font-bold md:text-5xl md:mb-16"
  >
    <span class="relative">
      <span
        class="absolute left-0 right-0 bottom-0.5 h-1/4 bg-aqua"
        aria-hidden="true"></span>
      <span class="relative">{heading}</span>
    </span>
  </h1>
  <slot />
</div>
