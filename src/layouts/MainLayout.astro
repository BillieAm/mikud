---
// component imports
import MainHead from "./MainHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

// style imports
import "../styles/global.css";
import "@fontsource/rubik";

export interface Props {
  title?: string;
  description?: string;
}

const {
  title = "מקוד | ניהול אנשים מכוון מטרה",
  description = "טיפול אישי ומקצועי בהון האנושי שלכם במיקור חוץ"
} = Astro.props;
---

<!DOCTYPE html>
<html lang="he" dir="rtl">
  <MainHead title={title} description={description} />
  <body
    class="flex flex-col justify-between text-slate-600 text-lg min-h-screen"
  >
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
